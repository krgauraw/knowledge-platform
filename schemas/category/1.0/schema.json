{
    "$id": "category-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Category",
    "type": "object",
    "required": [
        "name"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 5
        },
        "status": {
            "type": "string",
            "enum": [
                "Live",
                "Retired"
            ],
            "default": "Live"
        },
        "description": {
            "type": "string"
        },
        "identifier": {
            "type": "string"
        },
        "objectTypes": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["Content", "Collection","Framework"]
            },
            "default": ["Content"]
        },
        "objectMetadata":{
            "type": "object",
            "required": [
                "trackable",
                "limit",
                "test_prop_1"
            ],
            "properties": {
                "trackable": {
                    "type": "string",
                    "enum": ["Yes","No"],
                    "default": "No"
                },
                "test_prop_1": {
                    "type": "string",
                    "enum": ["Hello","Hi"]
                },
                "limit": {
                    "type": "number",
                    "default": 0
                },
                "tracable_start_date": {
                    "type": "string"
                },
                "tracable_end_date": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": true
}
